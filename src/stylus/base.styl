border-radius(args)
  -webkit-border-radius: args
  -moz-border-radius: args
  border-radius: args
box-shadow(args)
  -webkit-box-shadow args
  -moz-box-shadow args
  box-shadow args
html,body
  width 100%; height 100%;
html
  font-family: sans-serif;
  -webkit-text-size-adjust: 100%;
  -ms-text-size-adjust: 100%;
body
  font: 18px Microsoft YaHei,SimHei, Arial, sans-serif; margin 0; padding :0;font-size:1.2em;
.left
  float:left;
.flex-one
  flex:1;
.flex-two
  flex:2;
.flex-three
  flex:3;
header
  background:#BE272E; height:40px;display:flex;align-items:center;
header>a.bar
  display:inline-flex;text-align center; justify-content:center;color #f0f0f0;letter-spacing:5px;
header>a.bar>i
  width: 32px;  font-size:1.4em; vertical-align middle;align-items:center;
a.button
  border-radius(2px)
.logo
  box-shadow 1px 2px 5px #eeed